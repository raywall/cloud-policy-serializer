{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "idade": {
            "type": "integer",
            "minimum": 0
        },
        "tipo": {
            "type": "string",
            "enum": [
                "adulto",
                "juvenil",
                "senior",
                "outro"
            ]
        },
        "cliente": {
            "type": "object",
            "properties": {
                "tipo": {
                    "type": "string",
                    "enum": [
                        "premium",
                        "regular",
                        "vip"
                    ]
                }
            },
            "required": [
                "tipo"
            ],
            "additionalProperties": false
        },
        "endereco": {
            "type": "object",
            "properties": {
                "cep": {
                    "type": "string",
                    "pattern": "^\\d{5}-\\d{3}$"
                },
                "cidade": {
                    "type": "string"
                },
                "estado": {
                    "type": "string",
                    "minLength": 2,
                    "maxLength": 2,
                    "pattern": "^[A-Z]{2}$"
                }
            },
            "required": [
                "cep",
                "cidade",
                "estado"
            ],
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}